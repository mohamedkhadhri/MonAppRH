<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Bienvenue dans My ApplicationRH"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnManageUsers"
        android:text="Gérer les utilisateurs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnViewPlanning"
        android:text="Gérer les plannings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnViewConges"
        android:text="Demandes de congés"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnViewPresence"
        android:text="Présences / Absences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:text="Déconnexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"/>
    <!-- A ajouter quelque part dans activity_admin.xml (ex : au-dessus des boutons) -->
    <LinearLayout
        android:id="@+id/userCountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_user"
            android:contentDescription="Icône utilisateur" />

        <TextView
            android:id="@+id/textUserCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Utilisateurs : 0"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</LinearLayout>
